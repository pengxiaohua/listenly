generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model words {
  id            Int               @id @default(autoincrement())
  word          String
  category      String            // 存储单词的分类，如 CET4，CET6
  phonetic      String?
  translation   String?
  definition    String?
  is_correct    Boolean           @default(false)  // 拼写是否正确
  spelling_records records[]  // 复数形式
}

model records {
  id            Int      @id @default(autoincrement())
  word_id       Int
  user_id       String   // 可根据用户ID来进行扩展
  attempt_count Int      @default(0) // 用户尝试拼写次数
  correct_count Int      @default(0) // 拼写成功次数
  word          words    @relation(fields: [word_id], references: [id])
}
